<?xml version="1.0" encoding="utf-8"?>
<launch>
    <remap from="position_trajectory_controller/follow_joint_trajectory" to="joint_trajectory_action"/>
    <remap from="position_trajectory_controller/state" to="feedback_states"/>
    <remap from="position_trajectory_controller/command" to="joint_path_command"/>

    <rosparam file="$(find kuka_kvp_hw_interface)/config/params.yaml" command="load" />

    <node name="kuka_kvp_ftc_interface" pkg="kuka_kvp_hw_interface" type="kvp_ftc_node" respawn="false" output="screen" required="true" />
    <node name="kvp_ftc_interface" pkg="kuka_kvp_hw_interface" type="kvp_ftc_node" respawn="false" output="screen" required="true" />
    
    <param name="robot_description"  command="$(find xacro)/xacro --inorder '$(find kuka_kr16_support)/urdf/kr16_2.xacro'" />
  
    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find kuka_kvp_hw_interface)/config/hardware_controllers.yaml" command="load"/>
    <!-- Load standard kuka controller joint names from YAML file to parameter server -->
    <rosparam file="$(find kuka_kvp_hw_interface)/config/controller_joint_names.yaml" command="load"/>
    <!-- Load controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="position_trajectory_controller joint_state_controller --shutdown-timeout 1"/>
    <!-- Load robot state publisher -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
</launch>
